<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <link rel="stylesheet" href="/styles.css"> <!-- Link to your CSS file -->
</head>
<body>
    <h1>Login</h1>
    <button id="toggleButton">üåô</button> <!-- Use an emoji for the button -->

    <% if (error) { %>
        <p class="error"><%= error %></p>
    <% } %>

    <form action="/api/professor/login" method="POST" onsubmit="showLoading()">
        <label for="username">Username:</label>
        <input type="text" name="username" required>
        <label for="password">Password:</label>
        <input type="password" name="password" required>
        <button type="submit">Login</button>
    </form>

    <div id="loading" style="display: none;">Loading...</div>

    <script>
        // Function to toggle dark mode
        function toggleDarkMode() {
            document.body.classList.toggle('dark-mode');
            const isDarkMode = document.body.classList.contains('dark-mode');
            // Save the current mode to localStorage
            localStorage.setItem('darkMode', isDarkMode ? 'enabled' : 'disabled');
            // Update the button emoji based on mode
            toggleButton.textContent = isDarkMode ? '‚òÄÔ∏è' : 'üåô';
        }

        // Set the button and body according to the saved mode
        function applySavedMode() {
            const savedMode = localStorage.getItem('darkMode');
            if (savedMode === 'enabled') {
                document.body.classList.add('dark-mode');
                toggleButton.textContent = '‚òÄÔ∏è'; // Set sun emoji for dark mode
            } else {
                toggleButton.textContent = 'üåô'; // Set moon emoji for light mode
            }
        }

        // Add event listener for dark mode toggle button
        const toggleButton = document.getElementById('toggleButton');
        toggleButton.addEventListener('click', toggleDarkMode);

        // Apply the saved mode on page load
        window.onload = applySavedMode;

        // Show loading indicator during form submission
        function showLoading() {
            document.getElementById('loading').style.display = 'block';
        }
    </script>
</body>
</html>
